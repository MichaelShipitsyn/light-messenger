// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  output        = "../__generated__/prisma"
  binaryTargets = ["native"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int           @id @unique @default(autoincrement())
  email        String        @unique
  phoneNumber  String        @map("phone_number")
  username     String
  password     String
  refreshToken RefreshToken?
  Messages     Message[]
  Participant  Participant[]

  @@map("users")
}

model RefreshToken {
  user     User    @relation(fields: [userId], references: [id])
  userId   Int     @unique @map("user_id")
  hashedRt String? @map("hashed_refresh_token")

  @@map("refresh_tokens")
}

model Message {
  id          Int          @id @unique @default(autoincrement())
  text        String
  Creator     User         @relation(fields: [creatorId], references: [id])
  creatorId   Int          @map("creator_id")
  Dialog      Dialog       @relation(fields: [dialogId], references: [id])
  dialogId    Int          @map("dialog_id")
  Participant Participant?

  @@map("messages")
}

model Participant {
  id            Int     @id @unique @default(autoincrement())
  DialogID      Dialog  @relation(fields: [dialogId], references: [id])
  dialogId      Int     @map("dialog_id")
  UserID        User    @relation(fields: [userId], references: [id])
  userId        Int     @map("user_id")
  LastMessageID Message @relation(fields: [lastMessageId], references: [id])
  lastMessageId Int     @unique @map("last_message_id")

  @@map("Participants")
}

model Dialog {
  id          Int           @id @unique @default(autoincrement())
  Message     Message[]
  Participant Participant[]

  @@map("dialogs")
}
