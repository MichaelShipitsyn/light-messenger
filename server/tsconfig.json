{
  "compilerOptions": {
    "module": "CommonJS",
    "rootDir": "./src",
    "target": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "./build",
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "declaration": true,
    "strict": true,
    "typeRoots": ["types"]
  },
  "include": ["./src", "./types"]
}
